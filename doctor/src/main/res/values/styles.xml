<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/write</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/title</item>
        <item name="actionMenuTextColor">?android:attr/textColorPrimaryDisableOnly</item>
        <item name="android:itemTextAppearance">@style/menuItemColor</item>
      <!--  <item name="android:itemBackground">@color/title</item>-->
        <item name="android:textAppearanceButton">@style/toolbarTitleTextAppearance</item>
        <item name="colorControlNormal">?android:attr/textColorPrimaryDisableOnly</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/write</item>

        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
    <style name="AppThemeTransparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="toolbarTitleTextAppearance"
        parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/title</item>
    </style>
    <style name="menuItemColor">
        <item name="android:textColor">@color/title</item>
    </style>


<!--
    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        &lt;!&ndash;Any text styling can be done here&ndash;&gt;
        <item name="android:textStyle">normal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/title</item>
    </style>
-->

    <!---  imageView  -->
    <style name="my_image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="tab_title">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="toolbar_style">
        <item name="android:minWidth">45dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/s_toolbar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="toolbar_btn_style">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:background">@drawable/s_toolbar</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="tb_title_text_weight_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:padding">10dp </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_tb_border</item>
    </style>

    <style name="tb_title_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:padding">10dp </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_tb_border</item>
    </style>

    <style name="tb_wedget_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="spinnerStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>
    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="text_label_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="text_right_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/text_93</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>


    <style name="item_from_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

   <style name="et_styple">
       <item name="android:minHeight">35dp</item>
       <item name="android:paddingTop">12dp</item>
       <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/color_hint</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">@dimen/font_size_17</item>
   </style>

    <style name="btn_style">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/s_ibtn_send</item>
        <item name="android:textSize">@dimen/font_size_17</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
