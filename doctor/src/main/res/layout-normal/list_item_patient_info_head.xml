<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:background="#f7f7f7"
android:layout_width="match_parent"
android:layout_height="130dp">
<ImageView android:id="@id/iv_photo"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/icon_people_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView android:id="@id/tv_item_0"
    android:layout_marginTop="10dp"
    android:textColor="@color/black"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/iv_photo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView android:id="@id/tv_item_1"
    android:layout_marginTop="10dp"
    android:textColor="@color/text_a4"
    android:text="简介：暂无介绍"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/tv_item_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>
