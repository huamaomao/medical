<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@id/iv_photo"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/photo_height"
        android:layout_height="@dimen/photo_height" />

    <TextView android:id="@id/tv_item_0"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_photo"
        android:textSize="@dimen/font_size_15"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@id/tv_item_1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_below="@id/tv_item_0"
        android:textColor="@color/message_kemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView android:id="@id/tv_item_2"
        android:layout_marginLeft="20dp"
        android:paddingRight="2dp"
        android:textColor="@color/write"
        android:paddingLeft="14dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_size_12"
        android:layout_toRightOf="@id/tv_item_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@id/tv_item_3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_item_1"
        android:layout_below="@id/tv_item_0"
        android:drawableLeft="@drawable/icon_up"
        android:textColor="@color/message_kemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@id/tv_item_4"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/tv_item_3"
        android:layout_below="@id/tv_item_0"
        android:drawableLeft="@drawable/icon_down"
        android:textColor="@color/message_kemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:src="@drawable/icon_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/more_height"
        android:layout_marginRight="20dp"
        android:layout_height="@dimen/more_height" />
</RelativeLayout>