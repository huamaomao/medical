<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_style">
    <ImageView
        android:id="@id/iv_photo"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/photo_height"
        android:layout_height="@dimen/photo_height" />

    <TextView android:id="@id/tv_item_0"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_photo"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView android:id="@id/tv_item_2"
        android:layout_marginLeft="10dp"
        android:paddingRight="2dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/write"
        android:paddingLeft="2dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_size_12"
        android:drawablePadding="1dp"
        android:layout_toRightOf="@id/tv_item_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@id/tv_item_5"
        android:layout_marginLeft="10dp"
        android:paddingRight="2dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/write"
        android:paddingLeft="2dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_size_12"
        android:drawablePadding="1dp"
        android:layout_toRightOf="@id/tv_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@id/tv_item_3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_below="@id/tv_item_0"
        android:drawableLeft="@mipmap/icon_up"
        android:textColor="@color/message_kemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@id/tv_item_4"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_item_3"
        android:layout_below="@id/tv_item_0"
        android:drawableLeft="@mipmap/icon_down"
        android:textColor="@color/message_kemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>