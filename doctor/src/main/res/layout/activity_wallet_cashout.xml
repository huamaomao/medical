<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/style_wh_match_v"
    android:background="@color/appbg">
   <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:paddingLeft="@dimen/iten_margin_top"
        android:paddingRight="@dimen/iten_margin_top"
        android:layout_height="45dp">
        <TextView
            android:text="金额(元):"
            style="@style/T_DefaultText"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/iten_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <EditText
                android:id="@id/et_amount"
                style="@style/et_styple"
                android:layout_width="0px"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:textColorHint="@color/text_bf"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_cashout"
                android:layout_height="match_parent" />

            <View xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="0.5dp" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@id/btn_next"
        android:layout_marginTop="30dp"
        android:text="下一步"
        android:layout_marginLeft="@dimen/iten_margin_top"
        android:layout_marginRight="@dimen/iten_margin_top"
        android:background="@drawable/s_ibtn_send"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/write"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

</LinearLayout>