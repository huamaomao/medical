<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/appbg"
    style="@style/style_wh_match_v">
    <RelativeLayout
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="130dp">
            <ImageView android:id="@id/iv_photo"
                android:layout_marginTop="20dp"
                 android:layout_centerHorizontal="true"
                android:src="@drawable/icon_people_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
              <TextView android:id="@id/tv_item_0"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/black"
                  android:layout_centerHorizontal="true"
                  android:text="文静也小"
                  android:layout_below="@id/iv_photo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
                <TextView android:id="@id/tv_item_1"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_a4"
                   android:text="简介：暂无介绍"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_item_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <View android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <include layout="@layout/pulic_wrap_listview" />
    <View
        android:background="@color/divider"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <ListView
        android:id="@id/lv_data"
        android:background="@color/write"
        android:divider="@color/divider"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>