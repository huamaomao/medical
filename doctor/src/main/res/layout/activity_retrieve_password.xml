<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_login"
    style="@style/style_wh_match_v"
    android:background="@drawable/icon_login">
    <include layout="@layout/toolbar" />

    <GridLayout
       android:columnCount="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_bg_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@id/et_tel"
            android:padding="10dp"
            android:layout_columnSpan="2"
            android:textColor="@color/write"
            android:textSize="@dimen/font_size_14"
            android:hint="请输入手机号码"
            android:paddingLeft="10dp"
            android:maxLength="11"
            android:inputType="phone"
            android:imeOptions="actionSend"
            android:textColorHint="@color/hintText"
            android:background="@android:color/transparent"
            />
        <View android:layout_height="0.5dp"  android:background="@color/write" android:layout_columnSpan="2"/>
        <EditText
            android:id="@id/et_code"
            android:textColor="@color/write"
            android:textSize="@dimen/font_size_14"
            android:hint="请输入收到的验证码"
            android:padding="10dp"
            android:maxLength="4"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:textColorHint="@color/hintText"
            android:background="@android:color/transparent"
            android:gravity="fill"
         />
        <Button
            android:id="@id/btn_send"
            android:text="发送验证码"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/write"
            android:layout_gravity="right"
            android:layout_width="120dp"
            android:background="@drawable/s_btn_send"
           />
        <View android:layout_height="0.5dp"  android:background="@color/write" android:layout_columnSpan="2"/>
        <EditText
            android:id="@id/et_pwd"
            android:padding="10dp"
            android:textColor="@color/write"
            android:textSize="@dimen/font_size_14"
            android:hint="设置新的密码"
            android:maxLength="15"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:imeOptions="actionSend"
            android:textColorHint="@color/hintText"
            android:background="@android:color/transparent"
           />
    </GridLayout>
</LinearLayout>