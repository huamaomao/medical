<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/appbg"
   style="@style/style_wh_match_v"
    >
   <include layout="@layout/toolbar" />
    <LinearLayout
        android:clickable="false"
        style="@style/list_item">
            <ImageView
                android:src="@drawable/icon_renwu"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@id/et_tel"
                android:hint="输入用户名/手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:background="@drawable/icon_et_boder"
                android:layout_gravity="center_vertical"
                style="@style/et_styple"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
     </LinearLayout>

    <LinearLayout
        android:id="@id/ll_scanning"
        style="@style/list_item_style">
        <ImageView
            android:src="@drawable/icon_saosao"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="扫一扫"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="(扫描二维码)"
            android:textColor="@color/hintText"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:id="@id/ll_invite"
        style="@style/list_item_style"
     >
        <ImageView
            android:src="@drawable/icon_my_yaoqing"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="我的邀请码"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>