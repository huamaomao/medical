<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/appbg"
   style="@style/style_wh_match_v"
    >
   <include layout="@layout/toolbar" />
    <include layout="@layout/divider"
        android:layout_marginTop="@dimen/iten_margin_top"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@id/tv_code"
        android:drawableLeft="@drawable/icon_seach"
        android:text="用户名/手机号"
        android:drawablePadding="25dp"
        android:background="@drawable/s_btn"
        android:paddingLeft="@dimen/iten_margin_top"
        android:gravity="center_vertical"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/font_size_14"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <include layout="@layout/divider" />
    <LinearLayout
        android:id="@id/ll_scanning"
        style="@style/list_item_style">
        <ImageView
            android:src="@drawable/icon_saosao"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="扫一扫"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="(扫描二维码)"
            android:textColor="@color/hintText"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/divider" />
    <LinearLayout
        android:id="@id/ll_invite"
        style="@style/list_item_style"
     >
        <ImageView
            android:src="@drawable/icon_my_yaoqing"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="我的邀请码"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>