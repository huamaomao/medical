<?xml version="1.0" encoding="utf-8"?>
<com.android.common.widget.InputMethodLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_login"
    style="@style/style_wh_match_v"
    android:background="@drawable/icon_login"
  >
    <ImageView
        android:id="@id/iv_photo"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        style="@style/item_from_style"
        android:background="@drawable/round_bg_login"
      >
        <com.android.common.widget.CleanEditText
            android:id="@id/et_tel"
            style="@style/et_styple"
            android:hint="手机号"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:drawablePadding="17px"
            android:drawableLeft="@drawable/icon_user"
            android:background="@android:color/transparent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/write"
            />
        <com.android.common.widget.CleanEditText android:id="@id/et_pwd"
            android:hint="输入密码"
            android:maxLength="15"
            android:drawablePadding="17px"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/icon_pwd"
            android:imeOptions="actionSend|flagNoExtractUi"
            android:imeActionLabel="登陆"
            style="@style/et_styple"
             />
    </LinearLayout>

     <Button
         android:id="@id/btn_login"
         android:text="登陆"
         style="@style/btn_style"
         android:background="@drawable/s_btn_login"
         android:textColor="@color/write"
        />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">

              <View
                  android:id="@id/v_view"
                  android:layout_width="0.5dp"
                  android:layout_gravity="center"
                  android:layout_centerInParent="true"
                  android:background="@color/write"
                  android:layout_height="match_parent" />
            <TextView
                android:id="@id/tv_create_account"
                android:text="创建新账号"
                android:textColor="@color/write"
                android:layout_toLeftOf="@id/v_view"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@id/tv_forgot_pwd"
                android:text="忘记密码"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/v_view"
                android:textColor="@color/write"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

          </RelativeLayout>
</com.android.common.widget.InputMethodLinearLayout>