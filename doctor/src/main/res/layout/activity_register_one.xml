<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_login"
    style="@style/style_wh_match_v"
    android:background="@drawable/icon_login">
    <include layout="@layout/toolbar" />

    <GridLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:background="@drawable/round_bg_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
           android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="+86"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:textColor="@color/write"
                android:gravity="center"
                android:textSize="@dimen/font_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:background="@color/write"
                />
            <com.android.common.widget.CleanEditText
                android:id="@id/et_tel"
                android:textColor="@color/write"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxLength="11"
                android:textSize="@dimen/font_size_16"
                android:inputType="phone"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="输入手机号"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_columnSpan="2"
            android:background="@color/write"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <EditText
            android:id="@id/et_code"
            android:textColor="@color/write"
            android:textSize="@dimen/font_size_16"
            android:hint="请输入收到的验证码"
            android:paddingLeft="45dp"
            android:textColorHighlight="@color/hintText"
            android:textColorHint="@color/hintText"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:maxLength="6"
            android:layout_gravity="fill"
            />
        <Button
            android:id="@id/btn_send"
            android:text="获取验证码"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/write"
            android:layout_gravity="right"
            android:layout_width="90dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/s_btn_send"
            />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_columnSpan="2"
            android:background="@color/write"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <EditText
            android:id="@id/et_pwd"
            android:layout_columnSpan="2"
            android:textColor="@color/write"
            android:textSize="@dimen/font_size_16"
            android:hint="设置您的密码"
            android:drawablePadding="6dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:imeOptions="actionSend"
            android:inputType="textPassword"
            android:imeActionLabel="完成"
            android:maxLength="15"
            android:drawableLeft="@drawable/icon_pwd"
            android:textColorHighlight="@color/hintText"
            android:textColorHint="@color/hintText"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </GridLayout>
</LinearLayout>