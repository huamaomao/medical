<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/appLayoutStyle" >
  <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dip"
        android:paddingTop="30dip"
        android:background="@drawable/icon_default_bg" >

        <ImageView
            android:id="@id/iv_photo"
            android:layout_width="@dimen/photo_height"
            android:layout_height="@dimen/photo_height"
            android:src="@drawable/public_default_head" />
        <TextView
            android:id="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text=""
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="当前户主"
            style="@style/TitleDefaultText"
            />
    </LinearLayout>
    <include layout="@layout/refresh_recycler_view" />

</LinearLayout>