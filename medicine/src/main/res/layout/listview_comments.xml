<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/list_item_style">

    <ImageView
        android:id="@id/iv_photo"
        android:layout_marginRight="@dimen/iten_margin_top"
        android:layout_width="@dimen/photo_height"
        android:layout_height="@dimen/photo_height" />

    <TextView
        android:id="@id/tv_name"
        android:layout_toRightOf="@id/iv_photo"
        style="@style/TitleDefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@id/tv_date"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="8dp"
        style="@style/timeText"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/tv_comment"
        android:layout_marginTop="@dimen/iten_margin_top"
        android:layout_below="@id/tv_date"
        android:layout_toRightOf="@id/iv_photo"
        android:textColor="@color/color_63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/tv_praise"
        android:text="0"
        android:drawablePadding="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_63"
        style="@style/DefaultText"
        android:drawableLeft="@drawable/image_praise_btn_unselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>