<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1.5"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_item_head"
                android:layout_width="40dip"
                android:layout_height="40dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="大大" />

            <TextView
                android:id="@+id/text_item_time"
                android:layout_marginTop="8dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="晚上 18:08" />

            <TextView
                android:id="@+id/text_item_content"
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/public_636363"
                android:text="注意饮食也不错哦" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_item_praise"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_item_praidse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_praise_btn_unselect" />

            <TextView
                android:id="@+id/text_item_praidse_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:text="1" />
        </LinearLayout>
    </LinearLayout>
	<ImageView 
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    style="@style/image_line_black_alpha" />
</LinearLayout>