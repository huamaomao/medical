<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_item_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="10dip">

        <ImageView
            android:id="@+id/image_item_picture"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/public_image_loading" />

        <RelativeLayout
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="哈哈哈" />

            <TextView
                android:id="@+id/text_item_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:text="来源：椰子 2015-01-11 14:14" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>