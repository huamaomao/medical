<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg" >

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:layout_width="match_parent"
            android:layout_height="48dip"
            layout="@layout/layout_title_head" />

        <ImageView
            android:id="@+id/image_return"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:src="@drawable/image_return"
            android:scaleType="centerInside"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_head"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativelayout_personal_information"
            style="@style/relativelayoutlayout_style" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/public_black"
                        android:textSize="16sp"
                        android:text="陈笑熙" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="简介：暂无简介" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/public_image_next" />
        </RelativeLayout>

        <ImageView style="@style/image_line_black_alpha" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip" >

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_comments"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="评论\n15"
                    android:textSize="16sp"
                    android:textColor="@color/public_black" />

                <TextView
                    android:id="@+id/text_like"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="喜欢\n15"
                    android:textSize="16sp"
                    android:textColor="@color/public_black" />

                <TextView
                    android:id="@+id/text_focus"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="关注\n15"
                    android:textSize="16sp"
                    android:textColor="@color/public_black" />

                <TextView
                    android:id="@+id/text_fans"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="粉丝\n15"
                    android:textSize="16sp"
                    android:textColor="@color/public_black" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_line"
                android:layout_width="wrap_content"
                android:layout_height="3dip"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0.5dip"
                android:background="@color/public_26CFB3" />
        </RelativeLayout>

        <ImageView style="@style/image_line_black_alpha" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

</RelativeLayout>