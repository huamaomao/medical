<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bg" >

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:layout_width="match_parent"
            android:layout_height="48dip"
            layout="@layout/layout_title_head" />

        <ImageView
            android:id="@+id/image_return"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:scaleType="centerInside"
            android:src="@drawable/image_return" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_head"
        android:layout_marginBottom="35dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/public_white"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/text_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="晚上22:08  来源：叶子"
                    android:textColor="@color/public_bdbdbd" />

                <TextView
                    android:id="@+id/text_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="逗逼"
                    android:textColor="@color/public_black"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/image_line_black_alpha"
                    android:layout_marginTop="10dip" />

                <TextView
                    android:layout_marginTop="10dip" 
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="最近汤料报，好烦，你个逗逼，，逗逼你是边境牧羊犬，，，懂不，边境的。。逗逼"
                    android:textColor="@color/public_636363"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_of_taste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dip"
                        android:drawableLeft="@drawable/image_message_drawable"
                        android:drawablePadding="3dip"
                        android:text="21" />

                    <LinearLayout
                        android:id="@+id/linearlayout_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dip"
                        android:clickable="true"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/image_praidse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_praise_btn_unselect" />

                        <TextView
                            android:id="@+id/text_praidse_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dip"
                            android:text="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/public_white"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="相关推荐"
                android:textColor="@color/public_636363"
                android:textSize="14sp" />

            <com.roller.medicine.customview.listview.HorizontalListView
                android:id="@+id/horizontal_listview"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:background="@color/public_white" />

            <TextView
                android:id="@+id/text_comments_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/public_white"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:visibility="gone"
                android:textColor="@color/public_636363"
                android:textSize="14sp" />

            <com.roller.medicine.customview.listview.PublicListView
                android:id="@+id/public_of_taste_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/public_white"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dip" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_bg" >
        <ImageView 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="35dip"
            android:scaleType="centerInside"
            android:src="@drawable/image_shared_drawable"/>
        <ImageView 
            android:id="@+id/image_comments"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="35dip"
            android:scaleType="centerInside"
            android:src="@drawable/image_message_drawable"/>
        <ImageView 
            android:id="@+id/image_praise_buttom"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="35dip"
            android:scaleType="centerInside"
            android:src="@drawable/image_praise_btn_unselect"/>
    </LinearLayout>
	<include 
	    android:id="@+id/include_comments_popuwindow"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone"
	    layout="@layout/layout_include_comments"/>
</RelativeLayout>