<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/relativelayoutlayout_style">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_item_head"
                android:layout_width="@dimen/image_head_width_height"
                android:layout_height="@dimen/image_head_width_height"
                android:src="@drawable/public_default_head" />

            <TextView
                android:id="@+id/text_item_nickname"
                android:layout_marginLeft="10dip"
                android:textSize="16sp"
                android:textColor="@color/public_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主主" />
            
            <ImageView
                android:id="@+id/image_item_sex"
                android:layout_marginLeft="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/public_sex_man" />
            
            <ImageView
                android:id="@+id/image_item_type"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/public_medicine" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/public_image_next" />
    </RelativeLayout>

</LinearLayout>