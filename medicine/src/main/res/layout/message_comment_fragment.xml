<?xml version="1.0" encoding="utf-8"?>
<com.roller.medicine.widget.InputMethodLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_login"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View android:id="@id/v_view"
        android:background="@color/transparent_6"
        android:layout_weight="1"
        android:layout_width="match_parent" android:layout_height="0px" />
    <LinearLayout
        android:id="@id/ll_item_0"
        android:background="@color/appbg"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@id/et_content"
            style="@style/et_styple"
            android:layout_gravity="start"
            android:gravity="start"
            android:singleLine="false"
            android:textColor="@color/black"
            android:background="@color/write"
            android:layout_width="match_parent"
            android:layout_height="80dip" />
        <Button
            android:id="@id/btn_send"
            android:text="发布"
            android:layout_marginTop="10dp"
            android:textColor="#999999"
            android:layout_gravity="right"
            android:textSize="13.0sp"
            android:background="@drawable/s_btn"
            android:layout_width="60dp"
            android:layout_height="28dp" />
    </LinearLayout>
</com.roller.medicine.widget.InputMethodLinearLayout>