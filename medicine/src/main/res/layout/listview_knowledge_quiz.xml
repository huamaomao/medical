<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_item_picture"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/public_image_loading"/>

            <LinearLayout
                android:layout_marginLeft="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_item_title"
                    android:layout_marginTop="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/public_black"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/text_item_content"
                    android:layout_marginTop="11dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/public_636363"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_item_from"
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_bdbdbd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:background="@color/public_f7f7f7"
        android:padding="8dip" >

        <ImageView
            android:id="@+id/image_item_shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_shared_drawable" />

        <TextView
            android:id="@+id/text_item_of_taste"
            android:layout_marginLeft="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/image_message_drawable"
            android:drawablePadding="3dip"/>

        <LinearLayout
            android:id="@+id/linearlayout_item_praise"
            android:layout_marginLeft="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:clickable="true">

            <ImageView
                android:id="@+id/image_item_praidse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_item_praidse_count"
                android:layout_marginLeft="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>