<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_style">

    <ImageView android:id="@id/iv_photo"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/photo_height"
        android:layout_height="@dimen/photo_height" />

    <TextView android:id="@id/tv_item_0"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_16"
        android:layout_toRightOf="@id/iv_photo"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ImageView
        android:src="@drawable/icon_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/more_height"
        android:layout_height="@dimen/more_height" />
</RelativeLayout>