<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingRight="50dp"
    android:layout_width="match_parent"
    android:background="@color/chat_bg"
   style="@style/list_item_style">
    <TextView
        android:id="@id/tv_chat_time"
        android:padding="2dp"
        android:background="@drawable/round_bg_time"
        style="@style/timeText"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@id/tv_item_0"
        android:layout_below="@id/tv_chat_time"
        android:layout_marginLeft="50dp"
        android:textColor="@color/chat_time"
        android:textSize="@dimen/font_size_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@id/iv_photo"
        android:layout_below="@id/tv_item_0"
        android:layout_width="@dimen/photo_height"
        android:layout_height="@dimen/photo_height" />
    <TextView
        android:id="@id/tv_item_1"
        android:layout_below="@id/tv_item_0"
        android:layout_toRightOf="@id/iv_photo"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:background="@drawable/icon_chat_left"
        style="@style/textChat" />
</RelativeLayout>