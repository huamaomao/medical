<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
   style="@style/appLayoutStyle">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/iten_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@id/tv_date"
            style="@style/timeText"
            android:layout_marginLeft="@dimen/iten_margin_top"
            android:layout_marginRight="5dp"
            android:textColor="@color/time_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@id/tv_source"
            style="@style/timeText"
            android:textColor="@color/time_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        style="@style/TitleDefaultText" />
    <include layout="@layout/divider" />
    <LinearLayout
        android:id="@id/ll_item_0"
        android:background="@color/public_f7f7f7"
        android:gravity="right"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/iten_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/tv_comment"
            android:layout_marginLeft="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/timeText"
            android:drawableLeft="@drawable/image_message_drawable"
            android:drawablePadding="3dip"/>

        <TextView
            android:id="@id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:text="0"
            style="@style/timeText"
            android:drawableLeft="@drawable/image_praise_btn_unselect"
            android:drawablePadding="3dip"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/public_white"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:text="相关推荐"
        android:textColor="@color/public_636363"
        android:textSize="14sp" />

    <com.roller.medicine.customview.listview.HorizontalListView
        android:id="@+id/horizontal_listview"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@color/public_white" />
    <TextView
        android:id="@id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/public_white"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:visibility="gone"
        android:textColor="@color/public_636363"
        android:textSize="14sp" />
   <!-- <com.roller.medicine.customview.listview.PublicListView
        android:id="@+id/public_of_taste_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dip" />-->
</LinearLayout>