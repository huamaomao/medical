<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/title</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/white</item>
        <item name="actionMenuTextColor">?android:attr/textColorPrimaryDisableOnly</item>
        <item name="android:itemTextAppearance">@style/menuItemColor</item>
        <!--  <item name="android:itemBackground">@color/title</item>-->
        <item name="colorControlNormal">?android:attr/textColorPrimaryDisableOnly</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/title</item>
        <item name="android:centerColor">@color/write</item>
        <item name="android:textSize">16.0sp</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Translucent.Style</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppThemeTransparent" parent="AppToolbarTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <style name="menuItemColor">
        <item name="android:textColor">@color/title</item>
    </style>

  <style name="style_wh_match_v">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
     <style name="item_from_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

   <style name="et_styple">
        <item name="android:minHeight">35dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/color_hint</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">18.0sp</item>
       <item name="android:textCursorDrawable">@null</item>
       <item name="android:text"></item>
   </style>
    <style name="btn_style">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowRadius">90</item>
    </style>

    <style name="smsBtnStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/public_white</item>
        <item name="android:background">@drawable/s_btn_send</item>
    </style>

    <style name="textSize17">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14.0sp</item>
    </style>
    
    <style name="text_msg">
        <item name="android:textColor">#aeaeae</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="appLayoutStyle" parent="style_wh_match_v">
        <item name="android:background">@color/public_white</item>
    </style>



    <style name="DefaultText">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="timeText">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/time_cl</item>
    </style>

    <style name="TitleDefaultText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BloodDefaultText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/write</item>
    </style>

    <style name="FindText" parent="DefaultText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="appStyle" parent="style_wh_match_v">
        <item name="android:background">@color/public_white</item>
    </style>

    <style name="tb_title_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:padding">10dp </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_tb_border</item>
    </style>
    <style name="tb_title_text_weight_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:padding">10dp </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_tb_border</item>
    </style>
    <style name="BloodText" parent="DefaultText">
        <item name="android:text">- -</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0px</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="my_title">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_9c</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
    <style name="my_value" parent="my_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--   message  style -->
    <style name="textMsgNum">
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">10.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/icon_message_number</item>
    </style>

    <style name="textLastMsg">
        <item name="android:textColor">@color/message_kemu</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textSex">
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">6</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="textChat">
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:maxWidth">240dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="refreshStyle">
        <item name="android:background">@color/chat_bg</item>
    </style>

    <style name="infoStyle">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#939393</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="commentStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/hintText</item>
        <item name="android:background">#efefef</item>
    </style>

    <style name="myHomeTab">
        <item name="android:background">@drawable/s_btn</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/iten_margin_top</item>
        <item name="android:paddingBottom">@dimen/iten_margin_top</item>
    </style>
    <style name="gridTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13.0sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_home_conent</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>