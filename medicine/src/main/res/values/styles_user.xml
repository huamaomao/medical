<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/title</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/white</item>
        <item name="actionMenuTextColor">?android:attr/textColorPrimaryDisableOnly</item>
        <item name="android:itemTextAppearance">@style/menuItemColor</item>
        <!--  <item name="android:itemBackground">@color/title</item>-->
        <item name="colorControlNormal">?android:attr/textColorPrimaryDisableOnly</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/title</item>
        <item name="android:centerColor">@color/write</item>
        <item name="android:textSize">16.0sp</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Translucent.Style</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppThemeTransparent" parent="AppToolbarTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <style name="menuItemColor">
        <item name="android:textColor">@color/title</item>
    </style>

  <style name="style_wh_match_v">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
     <style name="item_from_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

   <style name="et_styple">
        <item name="android:minHeight">35dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/color_hint</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">18.0sp</item>
       <item name="android:textCursorDrawable">@null</item>
       <item name="android:text"></item>
   </style>
    <style name="btn_style">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowRadius">90</item>
    </style>

    <style name="smsBtnStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/public_white</item>
        <item name="android:background">@drawable/s_btn_send</item>
    </style>

    <style name="textSize17">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14.0sp</item>
    </style>
    
    <style name="text_msg">
        <item name="android:textColor">#aeaeae</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="appLayoutStyle" parent="style_wh_match_v">
        <item name="android:background">@color/public_white</item>
    </style>



    <style name="DefaultText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:drawablePadding">4.0dip</item>
    </style>

    <style name="TitleDefaultText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BloodDefaultText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/write</item>
    </style>

    <style name="FindText" parent="DefaultText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="appStyle" parent="style_wh_match_v">
        <item name="android:background">@color/public_white</item>
    </style>

    <style name="tb_title_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:padding">10dp </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_tb_border</item>
    </style>
    <style name="tb_title_text_weight_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:padding">10dp </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_tb_border</item>
    </style>
    <style name="BloodText" parent="DefaultText">
        <item name="android:text">- -</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0px</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>